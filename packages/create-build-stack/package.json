{
  "name": "create-build-stack",
  "version": "0.1.0",
  "description": "Create Build Stack projects with Material Design 3 components pre-configured",
  "type": "module",
  "bin": {
    "create-build-stack": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsup src/index.ts --format esm --target node18 --clean",
    "build:watch": "tsup src/index.ts --format esm --target node18 --watch",
    "prepublishOnly": "npm run build",
    "test": "vitest"
  },
  "keywords": [
    "create-app",
    "scaffolding",
    "react",
    "nextjs",
    "vite",
    "remix",
    "material-design",
    "tailwindcss",
    "build-stack",
    "boilerplate"
  ],
  "author": "Build Stack",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.1.1",
    "kleur": "^4.1.5",
    "ora": "^7.0.1",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.0.0",
    "@types/validate-npm-package-name": "^4.0.0",
    "tsup": "^7.2.0",
    "tsx": "^3.12.7",
    "typescript": "^5.0.0",
    "vitest": "^0.34.0"
  }
}